<% if flash[:alert] %>
    <div class="alert alert-error">
      <button class="close" data-dismiss="alert">×</button>
      <strong><%= flash[:alert] %></strong>
    </div>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success">
      <button class="close" data-dismiss="alert">×</button>
      <strong><%= flash[:notice] %></strong>
    </div>
<% end %>